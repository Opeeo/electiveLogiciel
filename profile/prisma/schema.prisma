// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Profile{
  id Int @id @default(autoincrement())
  last_name String @db.VarChar(255)
  first_name String @db.VarChar(255)
  email String @unique @db.VarChar(255)
  password String @db.VarChar(255)
  phone_number String @db.VarChar(255)
  birthday DateTime @default(now())
  deleted_at DateTime?
  deliveryman Deliveryman?
  consumer Consumer?
  developer Developer?
  restaurator Restaurator?
  adresses_profile AdressesOfProfile[]
  sponsor Sponsorship[] @relation("sponsor")
  sponsored Sponsorship[] @relation("sponsored")
  role_id Int
  Role Role @relation(fields: [role_id], references: [id])
}

model Deliveryman{
  profile_id Int
  Profile Profile @relation(fields: [profile_id], references: [id])
  vehicule_type String @db.VarChar(255)
}

model Consumer{
  profile_id Int
  Profile Profile @relation(fields: [profile_id], references: [id])
  delivery_notification Boolean 
  promotional_notification Boolean 
  promotional_email Boolean 
}

model Developer{
  profile_id Int
  Profile Profile @relation(fields: [profile_id], references: [id])
}

model RestaurantOwner{
  profile_id Int
  Profile Profile @relation(fields: [profile_id], references: [id])
}

model Address{
  id Int @id @default(autoincrement())
  street_number Int
  street_name String @db.VarChar(255)
  building_number Int
  city String @db.VarChar(255)
  additional_adress String @db.VarChar(255)
  addresses_profile AddressesOfProfile[]
}

model AddressesOfProfile{
  profile_id Int
  Profile Profile @relation(fields: [profile_id], references: [id])
  address_id Int
  address Address @relation(fields: [address_id], references: [id])
  assigned_at DateTime @default(now())

  @@id([profile_id, address_id])
}

model Sponsorship{
  sponsor_id Int
  Sponsor Profile @relation("sponsor", fields: [sponsor_id], references: [id])
  sponsored_id Int @unique
  Sponsored Profile @relation("sponsored", fields: [sponsored_id], references: [id])
  sponsorship_date DateTime @default(now())
}

model Role{
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  profile Profile?
}
